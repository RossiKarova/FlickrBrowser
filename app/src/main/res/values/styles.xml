<resources>
    <color name="colorPrimary">#F1A22F</color>
    <color name="colorPrimaryDark">#F57C00</color>
    <color name="colorPrimaryLight">#FBF8F2</color>
    <color name="colorAccent">#FB8C00</color>
    <color name="colorSecondText">#757575</color>
    <color name="colorPrimaryText">#212121</color>
    <color name="icons">#212121</color>
    <color name="divider">#BDBDBD</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorSecondText</item>
        <item name="android:icon">@color/icons</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
